<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollasset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtassetId"
                style="@style/general.editext"
                android:ems="10"
               	android:hint="Email or contact"
                android:inputType="textPersonName" 
                android:maxLength="9"/>

            <EditText
                android:id="@+id/edcapacity"
                style="@style/general.editext"
                android:ems="10"
                android:hint="members"
                android:inputType="number"
                android:maxLength="3"
               />
            <EditText
                android:id="@+id/edmodel"
                style="@style/general.editext"
                android:ems="10"
                android:hint="Org name"
                android:inputType="textPersonName"
                />
            
            <TextView
                android:id="@+id/seltypasset"
                 style="@style/general.textview"
                android:text="subscription model"
                 />

            <Spinner
                android:id="@+id/spintypeasset"
                style="@style/general.spinner"
                android:background="#fff"
                android:entries="@array/subscription"
                />

            <TextView
                android:id="@+id/selcategory"
                style="@style/general.textview"
                android:text="Select Speciality"
                 />

            <Spinner
                android:id="@+id/spincategory"
                style="@style/general.spinner"
                 android:background="#fff"
               android:entries="@array/speciality" />

           
  
		
		    <Button
		        android:id="@+id/btnaddasset"
		        android:layout_width="fill_parent"
		        style="@style/generalFonts.buttons"
		        android:text="Add org" />
    

        </LinearLayout>
		        
    </ScrollView>

</LinearLayout>

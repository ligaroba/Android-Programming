<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="generalFonts" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>        
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">@dimen/margins_dimension</item>
        <item name="android:typeface">serif</item>
        
    </style>
     <style name="generalFonts.background" >
        <item name="android:background">#fff</item> 
       </style>
    <style name="generalFonts.buttons" >
        <item name="android:background">@color/app_blue</item>
        <item name="android:layout_height">@dimen/button_height</item>
       
        
    </style>
    <style name="generalFonts.editext" >
           <item name="android:layout_height">wrap_content</item>
       
        
    </style>
    <style name="generalFonts.textview" >
            <item name="android:gravity">center_horizontal</item>
             <item name="android:background">@color/light_blue</item>
              <item name="android:layout_height">wrap_content</item>
       
        
    </style>
    

    	<style name="general" parent="@android:style/TextAppearance.Medium"> 
    	    <item name="android:layout_height">wrap_content</item>   	    
    	    <item name="android:layout_width">fill_parent</item>
    	    
    	</style>
    	<style name="general.buttons" > 
    	    <item name="android:layout_height">wrap_content</item>   	    
    	    <item name="android:layout_width">fill_parent</item>
    	    
    	</style>
    	<style name="general.editext" > 
    	    <item name="android:layout_margin">10dp</item>   	    
    	  
    	    
    	</style>
    		<style name="general.textview" > 
    	    <item name="android:background">@color/widgetbg</item> 
    	    <item name="android:gravity">center_horizontal</item> 
    	    <item name="android:layout_marginLeft">10dp</item>
    	     <item name="android:layout_marginTop">20dp</item>    
    	     <item name="android:padding" >5dp</item>	    
    	   
    	    </style>
         <style name="general.spinner" > 
    	    <item name="android:background">@color/widgetbg</item> 
    	    <item name="android:layout_marginTop" >@dimen/margin_top</item>
    	      <item name="android:padding" >5dp</item>
    	       <item name="android:layout_marginLeft">10dp</item> 
    	    
    	</style>
    	 <style name="textview_table" parent="@android:style/TextAppearance.Medium"> 
    	   
    	    <item name="android:layout_marginTop" >2dp</item>
    	     <item name="android:layout_marginLeft" >5dp</item>
    	    <item name="android:layout_height">wrap_content</item>   	    
    	    <item name="android:layout_width">wrap_content</item>
    	     <item name="android:textSize">12sp</item>
    	    
    	</style>
    	 <style name="textview_table.background" > 
    	    <item name="android:background">@color/widgetbg</item> 
    	    
    	</style>
    
    
</resources>

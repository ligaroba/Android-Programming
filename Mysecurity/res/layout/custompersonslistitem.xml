<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtvpersonsname"
        style="@style/textviewlayout"
        android:layout_alignTop="@+id/imgvpersonpic"
        android:layout_marginLeft="14dp"
         android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgvpersonpic"
        android:hint="@string/wantedperson"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtvwdescriptn"
        style="@style/textviewlayout"
        android:layout_alignLeft="@+id/txtvpersonsname"
        android:layout_below="@+id/txtvpersonsname"
        android:layout_height="wrap_content"  
              android:hint="@string/wantedthreatsate"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imgvpersonpic"
        style="@style/imageviewlayout"
        android:layout_alignParentLeft="true"
        android:background="@drawable/design"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/btngo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtvpersonsname"
        android:layout_marginRight="22dp"
        android:drawableRight="@drawable/ic_go20" />

</RelativeLayout>

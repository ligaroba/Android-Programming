<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_margin="80dp"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.example.splashdemo">

  
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="80dp"
         android:orientation="horizontal"
             >

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
            >

        <Button
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/ic_theft"
            android:text="Report" />
</android.support.v7.widget.GridLayout>
        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
             >
            
             <Button
                 android:layout_width="250dp"
                 android:layout_height="250dp"
                 android:paddingTop="20dp"
                android:drawableTop="@drawable/ic_emergency"
                 android:text="Emergency" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
         android:orientation="horizontal"
     
         >
    <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
             >
            
             <Button
                android:layout_width="250dp"
            android:layout_height="250dp"
                 android:paddingTop="20dp"
                 android:drawableTop="@drawable/ic_gridmarker"
                 android:text="Map" />

        </android.support.v7.widget.GridLayout>
        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
            >

           <Button
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/ic_theft"
            android:text="Report" />
</android.support.v7.widget.GridLayout>
    
    </LinearLayout>
  
</LinearLayout>
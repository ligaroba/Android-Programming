<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/tipdetails"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emergencystatus"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:background="@color/repotblue"
                android:id="@+id/textView"
                android:padding="10dp"
                android:layout_margin="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinemerselect"
                android:entries="@array/emegencylist"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>



            <EditText
        android:id="@+id/edcrimedescription"
        android:gravity="top"
        style="@style/edittextlayout"
        android:background="@drawable/design"
        android:hint="@string/crimedescrip"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>




            <LinearLayout
        style="@style/layoutreport.top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnaudio"
            style="@style/buttonsreport"
            android:background="@color/navyblue"
            android:drawableTop="@drawable/ic_audio"
            android:text="@string/audio" />

        <Button
            android:id="@+id/btnpic"
            style="@style/buttonsreport"
            android:background="@color/navyblue"
            android:drawableTop="@drawable/ic_picture"
            android:text="@string/pic" />

        <Button
            android:id="@+id/btnvideo"
            style="@style/buttonsreport"
            android:background="@color/navyblue"
            android:drawableTop="@drawable/ic_video"
            android:text="@string/video" />
    </LinearLayout>


    <Button
        android:id="@+id/btnsendcrime"
        style="@style/buttonlayout"
        android:background="@color/repotblue"
        android:text="@string/sendreport" />

    <CheckBox
        android:id="@+id/chbanonimous"
       style="@style/checklayout"
        android:checked="true"
        android:text="@string/anonimity" />
       </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/opt/Workspace/Mysecurityapp/app/src/main/res/layout/reportcrime.xml -->
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <ImageView
            style="@style/imageviewlayout"
            android:id="@+id/imgperson"
            android:layout_gravity="center_horizontal"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="Full Names "
                android:textStyle="bold"
                android:id="@+id/tvnames"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Gender"
                android:textStyle="bold"
                android:id="@+id/tvgender"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tvnames"
                android:layout_alignStart="@+id/tvnames"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="Last Seen loaction"
                android:textStyle="bold"
                android:id="@+id/tvlocation"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tvgender"
                android:layout_alignStart="@+id/tvgender"/>



        </RelativeLayout>
    </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/scrollView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="72dp">

   <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:id="@+id/scrollView"
       >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/descriptiondesign"
            android:id="@+id/tvdescription"
            android:padding="5dp"
            android:hint="This is where decription will be"
            android:textAlignment="textStart"
            />
    </ScrollView>


       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textMultiLine"
           android:layout_margin="10dp"
           android:ems="10"
           android:id="@+id/edtdetails"
           android:hint="@string/descriptionguide"
           android:layout_gravity="center_horizontal"/>


    <Button
      style="@style/buttonlayout"
        android:text="Report"
        android:id="@+id/btnreportwantedperson"
        android:background="@color/repotblue"
       />

    </LinearLayout>
</ScrollView>

</LinearLayout><!-- From: file:/opt/Workspace/Mysecurityapp/app/src/main/res/layout/persondetails.xml -->